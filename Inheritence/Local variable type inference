class MyClass{
    //...
}

class FirstDerivedClass extends MyClass{
    int x;
    //...
}
class SecondDerivedClass extends FirstDerivedClass{
    int y;
    //...
}
class Main {
    static MyClass getObj(int which){
        switch(which){
            case 0: return new MyClass();
            case 1: return new FirstDerivedClass();
            default: return new SecondDerivedClass();
        }
    }
    public static void main(String[] args) {
        
        var mc=getObj(0); //here getObj() returns a MyClass object
        var mc2=getObj(1); // FirstDerivedClass object is returned
        var mc3=getObj(2); //SecondDerivedClass object is returned
        
        // mc2.x=10;// WRONG!
        // mc3.y=10; //WRONG!
    }
}
